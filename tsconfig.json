{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    //"baseUrl": "src",
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": false,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./dist",
    "typeRoots": [
      "./src/interfaces",
      "./node_modules/@types"
    ],
    "paths": {
      "@/*": ["./src/*"]
    }

  }
}
